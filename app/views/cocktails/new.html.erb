<center><div class="navbar-cocktails">
  <%= link_to cocktails_path do %>
  Cocktails <span id="ylw-color"><i class="fas fa-cocktail"></i></span>
  <% end %>
</div></center>

<div class="new-cocktail-form" style="margin: 40px 400px;">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0)), url(https://havana-club.com/fr-be/sites/default/files/imports/assets/node_cocktail/Canch%C3%A1nchara/Canchanchara-Cocktail-recipe-Havana-club.jpg);">
</div>

<center><h1>Create new cocktail</h1></center>
<%= simple_form_for(@cocktail) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.label :image, "Image URL" %>
    <%= f.input :image, label: false %>
    <%= f.label :photo, "Or upload a photo" %>
    <%= f.input :photo,label: false %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions mt-5"><center>
    <%= f.button :submit, 'Save', class: 'btn btn-info w-25' %>
    <%= link_to 'Cancel', (@cocktail.new_record? ? cocktails_path : cocktail_path(cocktail)), class: 'btn btn-info w-25' %></center>
  </div>
<% end %>
</div>
