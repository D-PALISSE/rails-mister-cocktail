<h1><%= @cocktail.name %></h1>
<br>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> : <%= dose.description %></li>
  <% end %>
</ul>
<%= link_to "add a new ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "back to cocktails list", cocktails_path, class: "btn btn-primary" %>
