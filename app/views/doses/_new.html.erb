<div class="new-ingredient-form hide">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save', class: 'btn btn-info' %>
    <%= link_to "Cancel", cocktail_path(@cocktail), class: 'btn btn-info' %>
  </div>
<% end %>
</div>
